<form action="/authentication/sign-up" method="POST">
  <label for="input-username">User Name</label>
  <input
    type="text"
    id="input-username"
    name="username"
    placeholder="Your Unique User Name"
  />
  <label for="input-email">Email</label>
  <input type="email" id="input-email" name="email" placeholder="Your Email" />
  <label for="input-password">Password</label>
  <input
    type="password"
    name="password"
    id="input-password"
    placeholder="A Strong Password"
  />
  <label for="input-location">Location</label>
  <input
    type="text"
    name="location"
    id="input-location"
    placeholder="You Location"
  />
  <label for="input-picture">Profile Picture <small>(optional)</small></label>
  <input id="input-picture" type="file" name="picture" />

  <button>Sign Up</button>
</form>