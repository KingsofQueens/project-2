<form class="row g-3 mt-5" action="/authentication/sign-up" method="POST">
  <div class="col-md-6">
    <label for="input-username" class="form-label">User Name</label>
    <input
      type="text"
      id="input-username"
      name="username"
      placeholder="Your Unique User Name"
      class="form-control"
    />
  </div>

  <div class="col-md-6">
    <label for="input-password" class="form-label">Password</label>
    <input
      type="password"
      name="password"
      id="input-password"
      placeholder="A Strong Password"
      class="form-control"
    />
  </div>

  <div class="col-12">
    <label for="input-email" class="form-label">Email</label>
    <input
      type="email"
      id="input-email"
      name="email"
      placeholder="Your Email"
      class="form-control"
    />
  </div>

  <div class="col-12">
    <label for="input-location" class="form-label">Location</label>
    <input
      type="text"
      name="location"
      id="input-location"
      placeholder="You Location"
      class="form-control"
    />
  </div>

  <div class="col-12">
    <label for="input-picture" class="form-label">Profile Picture
      <small>(optional)</small></label>
    <input id="input-picture" type="file" name="picture" class="form-control" />
  </div>

  <div class="col-12">
    <button class="btn btn-outline-secondary">Sign Up</button>
  </div>
</form>